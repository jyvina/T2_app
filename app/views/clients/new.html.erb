<%= provide(:title, 'Client registration') %>

<%= render "static_pages/menubar" %>
<div class="container">
    <h2>Client Registration</h2>
    <div class="jumbotron">
        <div class= "row">
            <div class= "col-md-6 col-md-offset-3">
                
                <%= form_for (@client) do |f| %>
                    <%= f.label :name %>
                    <%= f.text_field :name%>
                    
                    <%= f.label :birth %>
                    <%= f.date_field :birth%>
                    
                    <%= f.label :address %>
                    <%= f.text_field :address%>
                    
                    <%= f.label :email %>
                    <%= f.email_field :email %>
                    
                    
                    
                    <%= f.label :comment %>
                    <%= f.text_field :comment%>
                    
                    <%= f.submit "Create client profile" , class: "btn btn-primary" %>
                <%end%>   
                    
                    
            </div>
        
        </div>
    </div>
</div>

